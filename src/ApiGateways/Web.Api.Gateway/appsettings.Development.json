{
    "UseCustomizationData": true,
    "ObservabilityOptions": {
        "ServiceName": "WebApiGateway",
        "EnabledTracing": true,        
        "EnabledMetrics": true,
        "CollectorUrl": "http://ubuntu-2404:4317",
        "SeqUrl": "http://ubuntu-2404:5341",
        "Serilog": {
            "MinimumLevel": {
                "Default": "Information",
                "Override": {
                    "Default": "Warning",
                    "Microsoft.AspNetCore": "Information",
                    "Microsoft.AspNetCore.Hosting": "Warning",
                    "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Information"
                }
            },
            "Enrich": [
                "FromLogContext",
                "WithMachineName",
                "WithThreadId"
            ],
            "Properties": {
                "Application": "Company-Api"
              }
        }
      },
    "AllowedHosts": "*",
    "Kestrel": {
        "EndpointDefaults": {
            "Protocols": "Http1"
        }
    },
    "ReverseProxy": {
        "Routes": {
          "company-route": {
            "ClusterId": "company-cluster",
            "Match": {
              "Path": "company/{**catch-all}"
            },
            "Transforms": [
              { "PathPattern": "{**catch-all}" }
            ]
          }
        },
        "Clusters": {
          "company-cluster": {
            "HealthCheck": {
                "Active": {
                    "Enabled": "true",
                    "Interval": "00:00:10",
                    "Timeout": "00:00:10",
                    "Policy": "ConsecutiveFailures",
                    "Path": "/hc",
                    "Query": "?foo=bar"
                }
            },
            "Metadata": {
               "ConsecutiveFailuresHealthPolicy.Threshold": "3"
            },
            "Destinations": {
              "destination1": {
                "Address": "http://company.api:5052/api/v1/Company/",
                "Health": "http://company.api:5052/"
              }
            }
          }
        }
    }    
}