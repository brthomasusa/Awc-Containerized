{
    "UseCustomizationData": true,
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Seq"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Default": "Warning",
                "Microsoft.AspNetCore": "Information",
                "Microsoft.AspNetCore.Hosting": "Warning",
                "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Information",
                "Yarp": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://localhost:5341"
                }
            }            
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId"
        ],
        "Properties": {
            "Application": "Web.Api.Gateway"
          }
    },
    "AllowedHosts": "*",
    "Kestrel": {
        "EndpointDefaults": {
            "Protocols": "Http1"
        }
    },
    "ReverseProxy": {
        "Routes": {
          "company-route": {
            "ClusterId": "company-cluster",
            "Match": {
              "Path": "company/{**catch-all}"
            },
            "Transforms": [
              { "PathPattern": "{**catch-all}" }
            ]
          }
        },
        "Clusters": {
          "company-cluster": {
            "Destinations": {
              "destination1": {
                "Address": "http://localhost:5052/api/v1/Company/"
              }
            }
          }
        }
    }    
}