{
    "UseCustomizationData": true,
    "ObservabilityOptions": {
        "ServiceName": "WebApiGateway",
        "EnabledTracing": true,        
        "EnabledMetrics": true,
        "CollectorUrl": "http://ubuntu-2404:4317",
        "SeqUrl": "http://ubuntu-2404:5341",
        "Serilog": {
            "MinimumLevel": {
                "Default": "Information",
                "Override": {
                    "Default": "Warning",
                    "Microsoft.AspNetCore": "Warning",
                    "Microsoft.AspNetCore.Hosting": "Warning",
                    "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Warning",
                    "Yarp": "Warning"
                }
            },
            "Enrich": [
                "FromLogContext",
                "WithMachineName",
                "WithThreadId"
            ],
            "Properties": {
                "Application": "Web.Api.Gateway"
              }
        }
    },
    "AllowedHosts": "*",
    "Kestrel": {
        "EndpointDefaults": {
            "Protocols": "Http1"
        },
        "Endpoints": {
            "http":{
                "Url": "http://[::]:5259"
            }            
        }
    },
    "ReverseProxy": {
        "Routes": {
          "company-route": {
            "ClusterId": "company-cluster",
            "Match": {
              "Path": "companies/{**catch-all}"
            },
            "Transforms": [
              { "PathPattern": "{**catch-all}" }
            ]
          },
          "employee-route": {
            "ClusterId": "employee-cluster",
            "Match": {
              "Path": "employees/{**catch-all}"
            },
            "Transforms": [
              { "PathPattern": "{**catch-all}" }
            ]
          },          
          "product-route": {
            "ClusterId": "product-cluster",
            "Match": {
              "Path": "products/{**catch-all}"
            },
            "Transforms": [
              { "PathPattern": "{**catch-all}" }
            ]
          }          
        },
        "Clusters": {
          "company-cluster": {
            "Destinations": {
                "company-destination": {
                    "Address": "http://localhost:3000/api/v1/companies/"
                  }
            }
          },
          "employee-cluster": {
            "Destinations": {
                "employee-destination": {
                    "Address": "http://localhost:3000/api/v1/employees/"
                  }
            }
          },          
          "product-cluster": {
            "Destinations": {
                "product-destination": {
                    "Address": "http://localhost:3100/"
                  }
            }
          }          
        }
    }    
}