@page "/"
@using Microsoft.AspNetCore.Components.WebAssembly.Hosting
@using WebUI.Components
@inject IWebAssemblyHostEnvironment Host
@inject IConfiguration Configuration

<PageTitle>Home</PageTitle>

<FluentGrid>
    <FluentGridItem xs="12">
        <div class="row" style="text-align: center;width: 100%;margin-top: 5px;">
            <h2 class="mb-5">AdventureWorks Cycles Admin Portal</h2>
        </div>
    </FluentGridItem>
    <FluentGridItem xs="12">
        <div class="card">
            <img src="/accountant 2.svg" style="width: 100%; height: 500px;" />
        </div>
    </FluentGridItem>
</FluentGrid>

<p></p>

@if (Host.IsDevelopment())
{
    <p>Api Url: @Configuration!["CompanyApiUrl"]</p>
}
