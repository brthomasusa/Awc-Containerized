{
    "UseCustomizationData": true,
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Seq",
            "Serilog.Sinks.OpenTelemetry"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Default": "Warning",
                "Microsoft.AspNetCore": "Information",
                "Microsoft.AspNetCore.Hosting": "Warning",
                "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://localhost:5341"
                }
            },
            {
                "Name": "OpenTelemetry",
                "Args": {
                    "endpoint": "http://localhost:4317/v1/logs",
                    "protocol": "HttpProtobuf",
                    "resourceAttributes": { "service.name" : "company-api" }
                }
            }            
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId"
        ],
        "Properties": {
            "Application": "Company-APi"
          }
    },
    "AllowedHosts": "*",
    "Kestrel": {
        "EndpointDefaults": {
            "Protocols": "Http1"
        }
    }
}